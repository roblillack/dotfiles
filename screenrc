#bindkey "³" select 3
#bindkey "´" select 4
#bindkey "µ" select 5
#bindkey "¶" select 6
#bindkey "·" select 7
#bindkey "¸" select 8
#bindkey "¹" select 9
bindkey "^[0" select 0
bindkey "^[\^" select 0
bindkey "^[`" select 0
bindkey "^[1" select 1
bindkey "^[2" select 2
bindkey "^[3" select 3
bindkey "^[4" select 4
bindkey "^[5" select 5
bindkey "^[6" select 6
bindkey "^[7" select 7
bindkey "^[8" select 8
bindkey "^[9" select 9
# alt- oder shift-tab: nächstes fenster
#bindkey "^É" next
bindkey "^[^I" next
bindkey "^[[Z" next

