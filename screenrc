defutf8 on
defflow off
escape ^tt
sorendition RW
startup_message off
defscrollback 1000
compacthist on
# damit geht alt-links/rechts, aber esc-links/rechts
# kommt korrekterweise durch:
maptimeout 5

vbell on
bell_msg 'ding-dong in window %n %t^G'
activity 'activity in window %n %t^G'

shell -bash
shelltitle 'shell'

caption always "%{=b bw} %H %{= bw}%c %M%d %{= cw} %-w%{=b cW}%n %t%{= cw}%+w"
#hardstatus string "%H screen [%n %t]"
hardstatus ignore "%H"
#termcapinfo xterm 'hs:ts=\E]0;:fs=\007:ds=\E]0;xterm\007'
#termcapinfo rxvt 'hs:ts=\E]0;:fs=\007:ds=\E]0;rxvt\007'
bind > focus down
bind < focus up
bind + resize +1
bind - resize -1
bind m monitor
bind ^m monitor

bind W screen -t www elinks http://www.google.de
bind M screen -t mutt mutt -y
bind I screen -t irc irssi
bind Q screen -t icq micq

# robs own private bindings:
# control-tab
bindkey "^[[rC;TAB~" next

# vi-tasten alt+j/k==runter/hoch, alt+h/l==links/rechts
bindkey "^[j" focus down
bindkey "^[k" focus up
bindkey "^[h" prev
bindkey "^[l" next
# alt-space==split, alt-backspace==delete
bindkey "^[ " split
bindkey "^[^?" remove
bindkey "^[^H" remove
# alt-n==neu, alt-k==kill
bindkey "^[n" screen
bindkey "^[k" kill
# alt-links/rechts: fenster auswählen
bindkey "^[[1;3D" prev
bindkey "^[[1;3C" next
bindkey "^[O3D" prev
bindkey "^[O3C" next
bindkey "^[^[OD" prev
bindkey "^[^[OC" next
bindkey "^[^[[D" prev
bindkey "^[^[[C" next
# alt-hoch/runter: region auswählen
bindkey "^[[1;3A" focus up
bindkey "^[[1;3B" focus down
bindkey "^[O3A" focus up
bindkey "^[O3B" focus down
bindkey "^[^[OA" focus up
bindkey "^[^[OB" focus down
bindkey "^[^[[A" focus up
bindkey "^[^[[B" focus down
# alt-einfügen/entfernen: region-split/remove
bindkey "^[[2;3~" split
bindkey "^[[3;3~" remove
bindkey "^[^[[2~" split
bindkey "^[^[[3~" remove
# alt-plus/minus: region grösser/kleiner
bindkey "«" resize +1
bindkey "­" resize -1
bindkey "^[+" resize +1
bindkey "^[=" resize +1
bindkey "^[-" resize -1
# alt-0-9: fenster wählen (^ oder ~ == 0)
#bindkey "Þ" select 0
#bindkey "°" select 0
