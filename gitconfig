[color]
  diff = auto
  status = auto
  branch = auto

[alias]
  ltag = for-each-ref --sort='-*authordate' --format='%(tag)' refs/tags --count=1
  ci = commit -a
  co = checkout
  st = status
  br = branch -a
  switch = !legit switch \"$@\"
  branches = !legit branches
  sprout = !legit sprout \"$@\"
  unpublish = !legit unpublish \"$@\"
  harvest = !legit harvest \"$@\"
  sync = !legit sync \"$@\"
  publish = !legit publish \"$@\"
  graft = !legit graft \"$@\"
  l = log --graph --pretty=format:\"%Cred%h%Cgreen %cd %Creset|%C(yellow)%d%Creset %s -- %Cblue%an%Creset, %Cgreen%ar%Creset\" --abbrev-commit --date=short

[color "branch"]
  current = yellow blue bold
  local = normal
  remote = normal ul

[color "status"]
  header = normal
  added = normal ul
  changed = normal bold
  untracked = normal reverse
